{
  "manifest_version": 3,
  "name": "Perplexity Thread Exporter",
  "version": "1.0",
  "description": "Perplexityの過去のスレッドをMarkdown形式でエクスポート",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
